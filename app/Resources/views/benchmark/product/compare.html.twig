{% extends 'benchmark/index.html.twig' %}

{% set mainPath = 'product' %}
{% set title = title|default('title.products')|trans %}
	
{% block content %}
	<div class="container-fluid">
		<div class="col-sm-2">
			{% block sidebar %}
				<div class="col-xs-12">
					<h3>{{ entry.name }}</h3>
				</div>
				
			{% endblock %}
		</div>
		<div class="col-sm-10">
			{% block itemContent %}
				<div class="row">
					<div class="col-xs-2">
						<div class="rect">
				    		{% if entry.image %}
								{% include 'common/image/image_entry.html.twig' with { 'entry': entry } %}
							{% endif %}
						</div>
					</div>
				</div>
			{% endblock %}
		</div>	
	</div>
{% endblock %}
