{% extends 'infomarket/index.html.twig' %}

{% set title = 'InfoMarket' %}
{% set mainPath = 'home' %}

{% block body %}
	<div class="container bkg-white full-content">
		{% block logo %}
			<div class="row">
				<div class="col-md-6 col-md-push-3">
					<div class="rect-2x1">
						<img class="div-center img-responsive" src="{{ asset('img/logo-infomarket.png') }}" />
					</div>
				</div>
			</div>
		{% endblock %}
		
