{% extends 'infomarket/base.html.twig' %}

{% set basePath = 'infomarket_' %}

{% if redirectToMainPath is not defined %}
	{% set redirectToMainPath = true %}
{% endif %}

{% block title %}{{ title|trans }}{% endblock %}

{% block baseMoreStyles %}
	.category-menu {
		width: {{ menuWidth }}px !important;
	}
{% endblock %}

{% block baseMoreJavascripts %}
	<script type="text/javascript">
		$(function(){
			$(".dropdown-menu > li > a.trigger").on("click",function(e){
				var current=$(this).next();
				var grandparent=$(this).parent().parent();
				if($(this).hasClass('left-caret')||$(this).hasClass('right-caret'))
					$(this).toggleClass('right-caret left-caret');
				grandparent.find('.left-caret').not(this).toggleClass('right-caret left-caret');
				grandparent.find(".sub-menu:visible").not(current).hide();
				current.toggle();
				e.stopPropagation();
			});
			$(".dropdown-menu > li > a:not(.trigger)").on("click",function(){
				var root=$(this).closest('.dropdown');
				root.find('.left-caret').toggleClass('right-caret left-caret');
				root.find('.sub-menu:visible').hide();
			});
		});

		$('body').cookiefy({
			displayedHtml: '{{ 'info.cookies.main1'|trans }} <a href="{{ asset('files/cookies.pdf') }}">{{ 'info.cookies.link'|trans }}</a>{{ 'info.cookies.main2'|trans }}',
		    backgroundColor: '#004373',
		    borderTop: '0px',
		    zIndex: '1050',
		    closeButtonUrl: '{{ asset('img/close-button.png') }}'
		});
	</script>
{% endblock %}

{% block body %}
	
	{% block navigationBar %}
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
			
				<div class="row">
					<div class="col-xs-12">
						{% block navigationHeader %}
							<div class="navbar-header">
								{% block navigationButton %}
									<button type="button" class="navbar-toggle collapsed" 
											data-toggle="collapse" 
											data-target="#bs-example-navbar-collapse-1" 
											aria-expanded="false">
								        <span class="sr-only">Toggle navigation</span>
								        <span class="icon-bar"></span>
								        <span class="icon-bar"></span>
								        <span class="icon-bar"></span>
							      	</button>
					      		{% endblock %}
					      		
					      		{% block navigationBrand %}
								<a class="navbar-brand" href="{{ path('infomarket_home') }}">
									<img class="brand-image" src="{{ asset('img/logo-infomarket-mini.png') }}">
								</a>
								{% endblock %}
					    	</div>
				    	{% endblock %}
				    	
				    	{% block navigationSearch %}
						<div class="navbar-search navbar-right navbar-input-group hidden-xs hidden-sm" role="search">
							{% form_theme menuSearchFilterForm 'form/fields.html.twig' %}
						
							{{ form_start(menuSearchFilterForm) }}
								<ul class="list-inline navbar-form">
									<li>
										<div class='input-group input-sm search'>
											{{ form_widget(menuSearchFilterForm.string, { 'label': 'label.search.string', 'attr': { 'class': 'input-sm' }  }) }}
											<span class="input-group-btn">
												{{ form_widget(menuSearchFilterForm.search, { 'icon': 'fa fa-search', 'label': ' ', 'attr': { 'class': 'input-sm btn-danger' }  }) }}
									      	</span>
										</div>
									</li>
								</ul>			
							{{ form_end(menuSearchFilterForm) }}
						</div>
						{% endblock %}
				    	
				    	{% block navigationList %}
							<div class="collapse navbar-collapse no-padding" id="bs-example-navbar-collapse-1">
				      			<ul class="nav navbar-nav navbar-center">
									{% block navigationMenu %}
										<li class="{% if mainPath == 'home' %}active{% endif %} branch-{{ contextBranchId }}">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
												<span class="fa fa-search"></span> 
												{{ 'label.infomarket.home'|trans }} 
												<span class="caret" />
											</a>
											<ul class="dropdown-menu">
												{% for menuBranch in menuBranches %}
													{% set active = menuBranch.id == contextBranchId ? 'active' : '' %}
													<li class="{{ active }} branch-{{ contextBranchId }}">
														<a href="{{ path(basePath ~ 'home', { branch: menuBranch.id }) }}">
															{{ menuBranch.name }}
														</a>
													</li>
												{% endfor %}
											</ul>
										</li>
										<li class="{% if mainPath == 'article' %}active{% endif %} branch-{{ contextBranchId }}">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
												<span class="fa fa-file-text-o"></span> {{ 'label.articles'|trans }} <span class="caret">
											</a>
											<ul class="dropdown-menu">
												{% for articleCategory in menuArticleCategories %}
													<li>
														<a href="{{ path(basePath ~ 'article', { 'article_filter_article_categories': [ articleCategory.id ] }) }}">
															{{ articleCategory.name }}
														</a>
													</li>
												{% endfor %}
												<li class="divider"></li>
												<li>
													<a href="{{ path(basePath ~ 'article') }}">
														{{ 'label.all'|trans }} <span class="fa fa-caret-right branch-color-{{ contextBranchId }}"></span>
													</a>
												</li>
											</ul>
										</li>
										{% if menuCategories | length > 0 %}
											<li class="{% if mainPath == 'category' %}active{% endif %} branch-{{ contextBranchId }}">
												<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
													<span class="fa fa-camera-retro"></span> {{ 'label.products'|trans }} <span class="caret">
												</a>
												<ul class="dropdown-menu category-menu">
													{% for category in menuCategories | slice(0,10) %}
														{% include 'common/category/menu_entry.html.twig' with
															{ 'entry': category, 'caretClass': 'branch-color-' ~ contextBranchId } %}
													{% endfor %}
													
													{% if menuCategories | length > 10 %}
														<li role="separator" class="divider"></li>
														<li>
															<a href="{{ path(basePath ~ 'category') }}">
																<span class="text-red">{{ 'label.more' | trans }}</span>
															</a>
														</li>
													{% endif %}
												</ul>
											</li>
										{% endif %}
										<li class="{% if mainPath == 'magazine' %}active{% endif %} branch-{{ contextBranchId }}">
											<a href="{{ path(basePath ~ 'magazine') }}">
												<span class="fa fa-newspaper-o"></span> {{ 'label.magazines'|trans }}</a>
										</li>
										
										<li class="{% if mainPath == 'advertisement' or mainPath == 'brand' %}active{% endif %} branch-{{ contextBranchId }}">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
												<span class="fa fa-globe"></span> {{ 'label.more'|trans }} <span class="caret">
											</a>
											<ul class="dropdown-menu category-menu">
												{% for menuEntry in mainMenuEntries %}
													{% include 'common/menu/menu_entry.html.twig' with { 'entry': menuEntry, infomarket: true } %}
												{% endfor %}
											</ul>
										</li>
									{% endblock %}
								</ul>
							</div>
						{% endblock %}
					</div>
				</div>
		  	</div>
		</nav>
	{% endblock %}
		
	<div class="container-fluid content">
		{% block content %}
		{% endblock %}
	</div>
	
	{% block contact %}
		<div class="container">
			
			<div class="row">
				<div class="col-sm-8">
					<h4 class="title padding-5">
						<span class="branch-color-{{ contextBranchId }}">{{ 'header.contact.1'|trans }}</span> 
						<span class="text-brand">{{ 'header.contact.2'|trans }}</span>
					</h4>
					
					<p>
						<a href="http://www.facebook.com/infomarket1">
							<img src="{{ asset('img/facebook.png') }}">
						</a>
						<a href="https://www.youtube.com/channel/UCpH2PHKAxnNlX-zSgJXyjpA">
							<img src="{{ asset('img/youtube.png') }}">
						</a>
					</p>
				</div>
				
				<div class="col-sm-4">
					<h4 class="title padding-5">
						<span class="branch-color-{{ contextBranchId }}">{{ 'header.newsletter.1'|trans }}</span> 
						<span class="text-brand">{{ 'header.newsletter.2'|trans }}</span>
					</h4>
					
					{% form_theme newsletterForm 'form/fields.html.twig' %}
					
					{{ form_start(newsletterForm) }}
						<ul class="list-inline no-padding">
							<li class=" no-padding">
								<div class='input-group input-sm no-padding'>
									{{ form_widget(newsletterForm.name, { 'label': 'label.name', 'attr': { 'class': 'input-sm' }  }) }}
									<span class="input-group-btn">
										{{ form_widget(newsletterForm.save, { 'label': 'action.save', 'attr': { 'class': 'input-sm btn-danger' }  }) }}
							      	</span>
								</div>
							</li>
							<li class="hidden"> {{ form_widget(newsletterForm.subscribed) }} </li>
						</ul>
					{{ form_end(newsletterForm) }}
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-12">
					{% block errorsBlock %}
						{% include 'common/errors.html.twig' %}
					{% endblock %}
				</div>
			</div>
					
			<div class="row">
				<div class="col-xs-12">
					<h5 class="text-right text-brand title padding-5">&copy; {{ 'now'|date('Y') }} {{ 'label.footer.copyright'|trans }}</h5>
				</div>
			</div>
		</div>    
	{% endblock %}
	
	{% block footer %}
		<div class="footer navbar-inverse">
	  		<div class="container-fluid">
		    	<div class="container">
		      		<div class="row">
		      			
		      			<div class="col-sm-3">
			      			<h3>{{ 'label.infomarket.footer.title'|trans }}</h3>
			      			<hr>
			      			<p>
			      				{{ 'label.infomarket.footer.address1'|trans }}<br>
			      				{{ 'label.infomarket.footer.address2'|trans }}<br>
			      				{{ 'label.infomarket.footer.phone'|trans }}<br>
			      				e-mail: <a href="mailto:{{ 'label.infomarket.footer.mail'|trans }}">{{ 'label.infomarket.footer.mail'|trans }}</a>
		      				</p>
			      		</div>
			      		
			      		<div class="col-sm-9">
			      			<div class="row">
				      			{% for menuEntry in footerMenuEntries %}
				      				<div class="col-xs-6 col-sm-3">
					      				<h3>{{ menuEntry.name }}</h3>
					      				<hr>
				      					{% for subentry in menuEntry.children %}
								      		<div>
								      			{% if subentry.page %}
								      				<a href="{{ path(basePath ~ 'page_show', { id: subentry.page }) }}">{{ subentry.name }}</a>
								      			{% elseif subentry.link %}
								      				<a href="{{ path(basePath ~ 'link_show', { id: subentry.link }) }}">{{ subentry.name }}</a>
							      				{% else %}
							      					{{ subentry.name }}
								      			{% endif %}
							      			</div>
						      			{% endfor %}
					      			</div>
					      		{% endfor %}
				      		</div>
			      		</div>
			      		
		      		</div>
		    	</div>
		  	</div>
		</div>
	{% endblock %}
	
	{% block branchBar %}
		<nav class="navbar navbar-default navbar-fixed-bottom">
			<div class="container-fluid">
		    	
		    	{% block branchBarList %}
	      			<ul class="nav navbar-nav navbar-center nav-horizontal">
						{% block branchMenu %}
							{% for entry in menuBranches %}
								{% if entry.id == contextBranchId %}
									{% set active='active' %}
								{% else %}
									{% set active='' %}
								{% endif %}
									<li class="branch-{{ entry.id }} {{ active }}">
										{% if redirectToMainPath %}
											<a href="{{ path(basePath ~ mainPath, { 'branch': entry.id }) }}">
										{% else %}
											<a href="{{ path(basePath ~ 'home', { 'branch': entry.id }) }}">
										{% endif %}
											<i class="fa {{ entry.icon }}"></i><span class="hidden-xs"> {{ entry.name }}</span>
										</a>
									</li>
							{% else %}
								{{ 'label.noEntries'|trans }}
							{% endfor %}
						{% endblock %}
					</ul>
				{% endblock %}
		  	</div>
		</nav>
	{% endblock %}
	
	{% block socialMenu %}
	<div class="social-menu">
		<div class="row">
			<a href="https://www.facebook.com/infomarket1">
				<div class="social-button">
					<span class="div-center fa fa-facebook"></span>
				</div>
			</a>
		</div>
		<div class="row">
			<a href="https://www.youtube.com/channel/UCpH2PHKAxnNlX-zSgJXyjpA">
				<div class="social-button red">
				<span class="div-center fa fa-youtube"></span>
				</div>
			</a>
		</div>
		<div class="row">
			<a href="http://infoprodukt.pl">
				<div class="social-button">
					<span class="div-center"><span class="text-red">I</span>P</span>
				</div>
			</a>
		</div>
		<div class="row">
			<a href="http://infomarket.edu.pl/benchmark">
				<div class="social-button">
					<span class="div-center"><span class="text-red">B</span>M</span>
				</div>
			</a>
		</div>
	</div>
	{% endblock %}
	
{% endblock %}
