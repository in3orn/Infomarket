{% extends 'infomarket/base/show.html.twig' %}

{% set redirectToMainPath = false %}

{% set title = entry.name|raw %}
{% set mainPath = 'magazine' %}
{% set extPath = '_show' %}

{% block breadcrumbs %}
{% endblock %}
		
{% block mainContent %}
	<div class="row">
		<div class="col-sm-4">
			<h3 class="padding-5 text-brand">
				{{ 'label.magazine.parent'|trans }}
			</h3>
		</div>
		<div class="col-sm-8">
			<h3 class="padding-5 text-red">
				{{ 'label.magazine.children'|trans }}
			</h3>
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-4">
			<div class="padding-5">
				<a href="{{ asset(entry.magazineFile) }}">
					<div class="col-xs-12 bkg-brand padding-5">
		  				<img class="img-responsive" 
		    				alt="{{ entry.name | raw }}" src="{{ asset(entry.getImagePath()) }}">
    				</div>
    				<div class="col-xs-12 bottom-rect bkg-brand padding-5">
    					<h4 class="title text-white text-center">
    						{{ entry.name }}&nbsp
    					</h4>
    				</div>
    				<div class="col-xs-12 bottom-rect bkg-red padding-5">
    					<h4 class="title text-white text-center">
    						{{ entry.date|date('Y-m') }}&nbsp
    					</h4>
    				</div>
		  		</a>
	  		</div>
		</div>
		<div class="col-sm-8">
			{% for subentry in entry.children %}
				<div class="col-sm-4 padding-5">
					<a href="{{ asset(subentry.magazineFile) }}">
						<div class="col-xs-12 bkg-brand padding-5">
			  				<img class="img-responsive" 
			    				alt="{{ subentry.name | raw }}" src="{{ asset(subentry.getImagePath()) }}">
	    				</div>
	    				<div class="col-xs-12 bottom-rect bkg-brand padding-5">
	    					<h4 class="title text-white text-center">
	    						{{ subentry.name }}&nbsp
	    					</h4>
	    				</div>
	    				<div class="col-xs-12 bottom-rect bkg-red padding-5">
	    					<h4 class="title text-white text-center">
	    						{{ subentry.date|date('Y-m') }}&nbsp
	    					</h4>
	    				</div>
			  		</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
