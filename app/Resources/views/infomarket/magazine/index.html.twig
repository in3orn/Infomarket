{% extends 'infomarket/base/index.html.twig' %}

{% set title = 'title.magazines'|trans %}
{% set type = 'title.magazines'|trans %}
{% set mainPath = 'magazine' %}
		
{% block mainContent %}
	{% block magazines %}
	<div class="row">
		{% for entry in entries %}
			<div class="col-sm-3 padding-5">
				<a href="{{ path(basePath ~ mainPath ~ '_show', { id: entry.id }) }}">
					<div class="col-xs-12 bkg-brand padding-5">
		  				<img class="img-responsive" 
		    				alt="{{ entry.name | raw }}" src="{{ asset(entry.getImagePath()) }}">
    				</div>
    				<div class="col-xs-12 bottom-rect bkg-brand padding-5">
    					<h4 class="title text-white text-center">
    						{{ entry.name }}&nbsp
    					</h4>
    				</div>
    				<div class="col-xs-12 bottom-rect bkg-red padding-5">
    					<h4 class="title text-white text-center">
    						{{ entry.date|date('Y-m') }}&nbsp
    					</h4>
    				</div>
		  		</a>
			</div>
		{% endfor %}
	</div>
	{% endblock %}
	
	{% block paginator %}
	<div class="row">
		<div class="col-xs-12">
	        {{ knp_pagination_render(entries) }}
		</div>
	</div>
	{% endblock %}
	
{% endblock %}
