{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'branch_category_assignment' %}
{% set title = 'title.branch_category_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.categories, { 'label': 'label.categories' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.branches, { 'label': 'label.branches' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-file-o"></i> {{ 'label.branch'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>{{ item.branch.name }}</td>
{% endblock %}