{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'term_category_assignment' %}
{% set title = 'title.term_category_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.categories, { 'label': 'label.categories' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.terms, { 'label': 'label.terms' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-photo"></i> {{ 'label.term'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>{{ item.term.name }}</td>
{% endblock %}