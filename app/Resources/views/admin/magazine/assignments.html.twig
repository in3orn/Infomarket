<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'title.branches'|trans }}</h2>
		</div>
		{% if canEdit %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_magazine_branch_assignment_new', { magazine: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.assignBranch'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for magazineBranchAssignment in entry.magazineBranchAssignments %}
		<tr>
			<td>
				<div class="table-circle-30 bkg-white">
					{% if magazineBranchAssignment.branch.image %}
						<img class="div-center img-{{ magazineBranchAssignment.branch.vertical ? '' : 'v' }}responsive"
							alt="{{ magazineBranchAssignment.branch.name }}" src="{{ asset(magazineBranchAssignment.branch.image) }}" />
					{% endif %}
				</div>
			</td>
			<td>
				<a href="{{ path('admin_branch_show', { id: magazineBranchAssignment.branch.id }) }}">
					{{ magazineBranchAssignment.branch.name }}
				</a>
			</td>
			{% if canEdit %}
				<td>
					<a href="{{ path('admin_magazine_branch_assignment_edit', { id: magazineBranchAssignment.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					<a href="{{ path('admin_magazine_branch_assignment_delete', { id: magazineBranchAssignment.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span> 
						{{ 'action.delete'|trans }}
					</a>
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>

