<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'label.newsletterGroups'|trans }}</h2>
		</div>
		{% if is_granted('ROLE_EDITOR') %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_newsletter_user_newsletter_group_assignment_new', { newsletter_user: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.assign.newsletterGroup'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for newsletterGroup in newsletterGroups %}
		<tr>
			<td>
				{% include 'common/links/simple_link.html.twig' with { type: 'newsletter_group', value: newsletterGroup } %}
			</td>
			<td>
				<a href="{{ path('admin_newsletter_user_newsletter_group_assignment_show', { id: newsletterGroup.assignmentId }) }}" class="btn btn-primary">
					<span class="fa fa-eye"></span> 
					{{ 'action.show'|trans }}
				</a>
				{% if is_granted('ROLE_EDITOR') %}
					<a href="{{ path('admin_newsletter_user_newsletter_group_assignment_edit', { id: newsletterGroup.assignmentId }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('admin_newsletter_user_newsletter_group_assignment_delete', { id: newsletterGroup.assignmentId }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span>  
						{{ 'action.delete'|trans }}
					</a>
				{% endif %}
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>