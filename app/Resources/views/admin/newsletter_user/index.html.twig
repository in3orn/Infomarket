{% extends 'admin/simple/index.html.twig' %}

{% set mainPath = 'newsletter_user' %}
{% set title = 'title.newsletterUsers'|trans %}
{% set gender = 'm.' %}

{% block filterMoreFields3 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.subscribed, { 'label': 'label.newsletter.subscribed' }) }}
	</li>
{% endblock %}

{% block headerMoreFields2 %}
	<th><i class="fa fa-envelope-o"></i> {{ 'label.newsletter.subscribed'|trans }}</th>
{% endblock %}

{% block entryMoreFields2 %}
	<td>
		{% include 'common/fields/bool_action_field.html.twig' with 
			{ 'id': item.id, 'value': item.subscribed, 'extPath': '_set_subscribed',
				'trueTooltip': 'label.newsletter.subscribed'|trans, 'falseTooltip': 'label.newsletter.unsubscribed'|trans,
				'trueIcon': 'fa-eye', 'falseIcon': 'fa-eye-slash' } %}
	</td>
{% endblock %}