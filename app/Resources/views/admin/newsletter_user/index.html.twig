{% extends 'admin/_simple/index.html.twig' %}

{% set mainPath = 'newsletter_user' %}
{% set title = 'label.newsletterUsers'|trans %}
{% set gender = 'm.' %}



{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.name, label: 'label.name' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.infomarket, label: 'label.infomarket' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.infoprodukt, label: 'label.infoprodukt' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.subscribed, label: 'label.newsletter.subscribe' } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-check', tooltip: 'label.infomarket' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-check', tooltip: 'label.infoprodukt' } %}
		
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-envelope-o', label: 'label.newsletter.subscribed' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.infomarket, extPath: '_set_im_published',
			trueTooltip: 'label.infomarket', falseTooltip: 'label.notInfomarket' } %}
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.infoprodukt, extPath: '_set_ip_published',
			trueTooltip: 'label.infoprodukt', falseTooltip: 'label.notInfoprodukt' } %}
			
	{% include 'common/fields/table/bool_action_field.html.twig' with 
		{ id: item.id, value: item.subscribed, extPath: '_set_subscribed',
			trueTooltip: 'label.newsletter.subscribed', falseTooltip: 'label.newsletter.unsubscribed',
			trueIcon: 'fa-eye', falseIcon: 'fa-eye-slash' } %}
{% endblock %}


{% block moreActions %}
	{% include 'admin/newsletter_user/components/index/more_actions.twig' %}
{% endblock %}