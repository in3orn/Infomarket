{% extends 'admin/simple/editor.html.twig' %}

{% set mainPath = 'user' %}
{% set title = 'title.users'|trans %}
{% set gender = 'm.' %}

{% block mainFields1 %}
	{{ form_row(form.username, { 'label': 'label.user.username' }) }}
{% endblock %}

{% block mainFields2 %}
{% endblock %}

{% block moreFields3 %}
	{{ form_row(form.email, { 'label': 'label.user.email' }) }}
	
	{{ form_row(form.forename, { 'label': 'label.user.forename' }) }}
	{{ form_row(form.surname, { 'label': 'label.user.surname' }) }}
	{{ form_row(form.pseudonym, { 'label': 'label.user.pseudonym' }) }}
	
	{% set hidden = is_granted('ROLE_SUPER_ADMIN') ? "" : "hidden" %}
	{{ form_row(form.roles, { 'label': 'label.user.roles', 'attr': {'class': hidden} }) }}
{% endblock %}