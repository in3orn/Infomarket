{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'magazine_branch_assignment' %}
{% set title = 'title.magazine_branch_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.branches, { 'label': 'label.branches' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.magazines, { 'label': 'label.magazines' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-"></i> {{ 'label.magazine'|trans }}</th>
	<th><i class="fa fa-"></i> {{ 'label.branch'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'magazine', value: { id: item.magazineId, name: item.magazineName } } %}
	</td>
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'branch', value: { id: item.branchId, name: item.branchName } } %}
	</td>
{% endblock %}