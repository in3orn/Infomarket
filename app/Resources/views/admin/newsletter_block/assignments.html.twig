<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'title.adverts'|trans }}</h2>
		</div>
		{% if is_granted('ROLE_EDITOR') %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_newsletter_block_advert_assignment_new', { newsletter_block: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.assignAdvert'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for newsletterBlockAdvertAssignment in entry.newsletterBlockAdvertAssignments %}
		{% set advert = newsletterBlockAdvertAssignment.advert %}
		<tr>
			<td>
				<div class="table-circle-30 bkg-white" width="20" height="20">
					{% if advert.image %}
						<img class="div-center img-{{ advert.vertical ? '' : 'v' }}responsive"
							alt="{{ advert.image }}" src="{{ asset(advert.image) }}" />
					{% endif %}
				</div>
			</td>
			<td>
				<a href="{{ path('admin_advert_show', { id: advert.id }) }}">
					{{ advert.name }}
				</a>
			</td>
			{% if is_granted('ROLE_EDITOR') %}
				<td>
					<a href="{{ path('admin_newsletter_block_advert_assignment_edit', { id: newsletterBlockAdvertAssignment.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					<a href="{{ path('admin_newsletter_block_advert_assignment_delete', { id: newsletterBlockAdvertAssignment.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span> 
						{{ 'action.delete'|trans }}
					</a>
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>






