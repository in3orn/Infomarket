<div class="row equal">
	<div class="col-xs-6 col-sm-2">
		<h2>{{ 'label.category.children'|trans }}</h2>
	</div>
	{% if is_granted('ROLE_EDITOR') %}
		<div class="col-xs-6 col-sm-2">
			<a href="{{ path('admin_category_new', { parent: entry.id }) }}"
				class="btn btn-success text-xs-bottom-mm">
				<span class="fa fa-plus"></span> 
				{{ 'action.createSubcategory'|trans }} 
			</a>
		</div>
	{% endif %}
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for category in entry.children %}
		<tr>
			<td>
				<a href="{{ path('admin_category_show', { id: category.id }) }}">
					{{ category.name }} {{ category.subname }}
				</a>
			</td>
			{% if is_granted('ROLE_EDITOR') %}
				<td>
					<a href="{{ path('admin_category_edit', { id: category.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin_category_delete', { id: category.id }) }}" class="btn btn-danger">
							<span class="fa fa-trash"></span> 
							{{ 'action.delete'|trans }}
						</a>
					{% endif %}
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>




<div class="row equal">
	<div class="col-xs-6 col-sm-2">
		<h2>{{ 'title.branches'|trans }}</h2>
	</div>
	{% if is_granted('ROLE_EDITOR') %}
		<div class="col-xs-6 col-sm-2">
			<a href="{{ path('admin_branch_category_assignment_new', { category: entry.id }) }}"
				class="btn btn-success text-xs-bottom-mm">
				<span class="fa fa-plus"></span> 
				{{ 'action.assignBranch'|trans }} 
			</a>
		</div>
	{% endif %}
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for branchCategoryAssignment in entry.branchCategoryAssignments %}
		<tr>
			<td>
				<a href="{{ path('admin_branch_show', { id: branchCategoryAssignment.branch.id }) }}">
					{{ branchCategoryAssignment.branch.name }}
				</a>
			</td>
			{% if is_granted('ROLE_EDITOR') %}
				<td>
					<a href="{{ path('admin_branch_category_assignment_edit', { id: branchCategoryAssignment.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					<a href="{{ path('admin_branch_category_assignment_delete', { id: branchCategoryAssignment.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span> 
						{{ 'action.delete'|trans }}
					</a>
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>