{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'newsletter_block_advert_assignment' %}
{% set title = 'title.newsletter_block_advert_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.newsletterBlocks, { 'label': 'label.newsletterBlocks' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.adverts, { 'label': 'label.adverts' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-file-o"></i> {{ 'label.article'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>{{ item.newsletterBlock.name }} {{ item.newsletterBlock.subname }}</td>
{% endblock %}