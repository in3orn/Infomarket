<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'label.newsletterBlocks'|trans }}</h2>
		</div>
		{% if canEdit %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_newsletter_block_new', { newsletter_page: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.create.newsletterBlock'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for newsletterBlock in entry.newsletterBlocks %}
		<tr>
			<td>
				<a href="{{ path('admin_newsletter_block_show', { id: newsletterBlock.id }) }}">
					{{ newsletterBlock.name }} {{ newsletterBlock.subname }}
				</a>
			</td>
			<td>
				<a href="{{ path('admin_newsletter_block_show', { id: newsletterBlock.id }) }}" class="btn btn-primary">
					<span class="fa fa-eye"></span> 
					{{ 'action.show'|trans }}
				</a>
				{% if canEdit %}
					<a href="{{ path('admin_newsletter_block_edit', { id: newsletterBlock.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
				{% endif %}
				{% if canDelete %}
					<a href="{{ path('admin_newsletter_block_delete', { id: newsletterBlock.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span>  
						{{ 'action.delete'|trans }}
					</a>
				{% endif %}
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>