{% extends 'admin/image/show.html.twig' %}

{% set mainPath = 'product' %}
{% set title = 'title.products'|trans %}
{% set gender = 'm.' %}

{% block moreFields1 %}
	{% if entry.brand %}
		<div class="row">
			<div class="col-xs-12">
				<h2>{{ entry.brand.name | raw }}</h2>
			</div>
		</div>
	{% endif %}
{% endblock %}

{% block moreFields3 %}
	{% include 'common/fields/simple_field.html.twig' with 
	{ 'label': 'label.brand', 'value': entry.brand,
		'object': 'brand', 'routeId': entry.id } %}
		
	{% include 'common/fields/text_field.html.twig' with 
	{ 'label': ('label.product.price')|trans, 'value': entry.price } %}
	
	{% include 'common/fields/text_field.html.twig' with 
	{ 'label': ('label.product.guarantee')|trans, 'value': entry.guarantee } %}
{% endblock %}

{% block assignments %}
	{% include 'admin/product/assignments.html.twig' with { 'entry': entry } %}
{% endblock %}