<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'title.categories'|trans }}</h2>
		</div>
		{% if canEdit %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_product_category_assignment_new', { product: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.assignCategory'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for productCategoryAssignment in entry.productCategoryAssignments %}
		<tr>
			<td>
				<div class="table-circle-30 bkg-white">
					{% if productCategoryAssignment.category.image %}
						<img class="div-center img-{{ productCategoryAssignment.category.vertical ? '' : 'v' }}responsive"
							alt="{{ productCategoryAssignment.category.name }}" src="{{ asset(productCategoryAssignment.category.image) }}" />
					{% endif %}
				</div>
			</td>
			<td>
				<a href="{{ path('admin_category_show', { id: productCategoryAssignment.category.id }) }}">
					{{ productCategoryAssignment.category.name }}
				</a>
			</td>
			{% if canEdit %}
				<td>
					<a href="{{ path('admin_product_category_assignment_edit', { id: productCategoryAssignment.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					<a href="{{ path('admin_product_category_assignment_delete', { id: productCategoryAssignment.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span> 
						{{ 'action.delete'|trans }}
					</a>
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>