{% extends 'admin/image/editor.html.twig' %}

{% set title = 'title.adverts'|trans %}
{% set mainPath = 'advert' %}
{% set gender = 'fm.' %}


{% block moreJavascripts %}
	{% include 'admin/common/editor/date_script.twig' %}
{% endblock %}


{% block headerFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'admin/common/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.location, label: 'label.advert.location' } %}
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.link, label: 'label.advert.link' } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/date_field.twig' with 
	{ field: form.dateFrom, label: 'label.advert.dateFrom', sm: 6 } %}
	
    {% include 'admin/common/editor/date_field.twig' with 
	{ field: form.dateTo, label: 'label.advert.dateTo', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.showLimit, label: 'label.advert.showLimit', sm: 6 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.clickLimit, label: 'label.advert.clickLimit', sm: 6 } %}
{% endblock %}

{% block assignments %}
	{% include 'admin/advert/assignments.html.twig' with { 'entry': entry } %}
{% endblock %}