{% extends 'admin/image/index.html.twig' %}

{% set mainPath = 'advert' %}
{% set title = 'title.adverts'|trans %}

{% block filterMoreFields3 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.locations, { 'label': 'label.advert.locations' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.categories, { 'label': 'label.categories' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.link, { 'label': 'label.advert.link' }) }}
	</li>
{% endblock %}

{% block headerMoreFields3 %}
	<th><i class="fa fa-globe"></i> {{ 'label.advert.link'|trans }}</th>
	
	<th><i class="fa fa-eye"></i> {{ 'label.advert.showCount'|trans }}</th>
	<th><i class="fa fa-eye-slash"></i> {{ 'label.advert.showLimit'|trans }}</th>
	<th><i class="fa fa-hand-pointer-o"></i> {{ 'label.advert.clickCount'|trans }}</th>
	<th><i class="fa fa-hand-stop-o"></i> {{ 'label.advert.clickLimit'|trans }}</th>
{% endblock %}

{% block entryMoreFields3 %}
	<td>{{ item.link}}</td>
	
	<td>{{ item.showCount }}</td>
	<td>{{ item.showLimit }}</td>
	<td>{{ item.clickCount }}</td>
	<td>{{ item.clickLimit }}</td>
{% endblock %}