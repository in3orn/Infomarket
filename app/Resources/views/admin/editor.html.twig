{% extends 'admin/index.html.twig' %}

{% set extPath = '_edit' %}

{% block content %}
	
	<div class="container">
		{% block formBlock %}
		{% form_theme form 'form/fields.html.twig' %}
		
		{% block errorsBlock %}
			{% if errors %}
				<div class="row">
					<div class="col-xs-12">
		                {% for error in errors %}
		                    <div class="alert alert-danger">
		                        {{ error }}
		                    </div>
		                {% endfor %}
					</div>
				</div>
			{% endif %}
		{% endblock %}
		
		<div class="row">
			<div class="col-xs-12">
			{{ form_start(form) }}
				{% block moreFields1 %}
			    {% endblock %}
			
			    {% block mainFields1 %}
			    {% endblock %}
			    
			    {% block moreFields2 %}
			    {% endblock %}
			    
			    {% block mainFields2 %}
			    {% endblock %}
			    
			    {% block moreFields3 %}
			    {% endblock %}
			
				{{ form_errors(form) }}
			
				{% block moreActions1 %}
			    {% endblock %}
			    
				{% block mainActions %}
			    {% endblock %}
			    
			    {% block moreActions2 %}
			    {% endblock %}
			{{ form_end(form) }}
			</div>
		</div>
		
		<div class="row">
			<div class="col-xs-12">
				{% if entry.id %}
					{% block assignments %}
			    	{% endblock %}
		    	{% endif %}
			</div>
		</div>
			    
		{% endblock %}
	</div>
	
{% endblock %}