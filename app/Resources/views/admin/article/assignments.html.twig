<div class="row equal">
	<div class="col-xs-6 col-sm-2">
		<h2>{{ 'label.article.children'|trans }}</h2>
	</div>
	{% if is_granted('ROLE_EDITOR') %}
		<div class="col-xs-6 col-sm-2">
			<a href="{{ path('admin_article_new', { parent: entry.id }) }}"
				class="btn btn-success text-xs-bottom-mm">
				<span class="fa fa-plus"></span> 
				{{ 'action.createSubarticle'|trans }} 
			</a>
		</div>
	{% endif %}
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for article in entry.children %}
		<tr>
			<td>
				<a href="{{ path('admin_article_show', { id: article.id }) }}">
					{{ article.name }} {{ article.subname }}
				</a>
			</td>
			<td>
				<a href="{{ path('admin_article_show', { id: article.id }) }}" class="btn btn-primary">
					<span class="fa fa-eye"></span> 
					{{ 'action.show'|trans }}
				</a>
				{% if is_granted('ROLE_EDITOR') %}
					<a href="{{ path('admin_article_edit', { id: article.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('admin_article_delete', { id: article.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span>  
						{{ 'action.delete'|trans }}
					</a>
				{% endif %}
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>





