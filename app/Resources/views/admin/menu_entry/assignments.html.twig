<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'label.category.children'|trans }}</h2>
		</div>
		{% if is_granted('ROLE_EDITOR') %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_menu_entry_new', { parent: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.menuEntry.createSubentry'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for subentry in entry.children %}
		<tr>
			<td>
				<a href="{{ path('admin_menu_entry_show', { id: subentry.id }) }}">
					{{ subentry.name }}
				</a>
			</td>
			<td>
				{% include 'common/fields/bool_action_field.html.twig' with 
					{ 'id': subentry.id, 'value': subentry.infomarket, 'extPath': '_set_im_published',
						'trueTooltip': 'label.published'|trans, 'falseTooltip': 'label.unpublished'|trans } %}
			</td>
			<td>
				{% include 'common/fields/bool_action_field.html.twig' with 
					{ 'id': subentry.id, 'value': subentry.infoprodukt, 'extPath': '_set_ip_published',
						'trueTooltip': 'label.published'|trans, 'falseTooltip': 'label.unpublished'|trans } %}
			</td>
			{% if is_granted('ROLE_EDITOR') %}
				<td>
					<a href="{{ path('admin_menu_entry_edit', { id: subentry.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin_menu_entry_delete', { id: subentry.id }) }}" class="btn btn-danger">
							<span class="fa fa-trash"></span> 
							{{ 'action.delete'|trans }}
						</a>
					{% endif %}
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>



<div class="col-xs-12">
	<div class="row equal">
		<div class="col-xs-6 col-sm-2">
			<h2>{{ 'title.menus'|trans }}</h2>
		</div>
		{% if is_granted('ROLE_EDITOR') %}
			<div class="col-xs-6 col-sm-2">
				<a href="{{ path('admin_menu_menu_entry_assignment_new', { menuEntry: entry.id }) }}"
					class="btn btn-success text-xs-bottom-mm">
					<span class="fa fa-plus"></span> 
					{{ 'action.assignMenu'|trans }} 
				</a>
			</div>
		{% endif %}
	</div>
</div>

<table class="table table-striped vert-align">
	<tbody>
	{% for menuMenuEntryAssignment in entry.menuMenuEntryAssignments %}
		<tr>
			<td>
				<a href="{{ path('admin_menu_show', { id: menuMenuEntryAssignment.menu.id }) }}">
					{{ menuMenuEntryAssignment.menu.name }}
				</a>
			</td>
			{% if is_granted('ROLE_EDITOR') %}
				<td>
					<a href="{{ path('admin_menu_menu_entry_assignment_edit', { id: menuMenuEntryAssignment.id }) }}" class="btn btn-warning">
						<span class="fa fa-edit"></span> 
						{{ 'action.edit'|trans }}
					</a>
					<a href="{{ path('admin_menu_menu_entry_assignment_delete', { id: menuMenuEntryAssignment.id }) }}" class="btn btn-danger">
						<span class="fa fa-trash"></span> 
						{{ 'action.delete'|trans }}
					</a>
				</td>
			{% endif %}
		</tr>
	{% endfor %}
	</tbody>
</table>