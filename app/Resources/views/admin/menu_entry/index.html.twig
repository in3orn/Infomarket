{% extends 'admin/simple/index.html.twig' %}

{% set mainPath = 'menu_entry' %}
{% set title = 'title.menuEntries'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.menus, { 'label': 'label.menus' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.parents, { 'label': 'label.magazine.parents' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.branches, { 'label': 'label.branches' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.categories, { 'label': 'label.categories' }) }}
	</li>
{% endblock %}

{% block headerMoreFields3 %}
	<th><i class="fa fa-file-o"></i> {{ 'label.menuEntry.pages'|trans }}</th>
	<th><i class="fa fa-link"></i> {{ 'label.menuEntry.links'|trans }}</th>
{% endblock %}

{% block entryMoreFields3 %}
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'page', value: { id: item.pageId, name: item.pageName } } %}
	</td>
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'link', value: { id: item.linkId, name: item.linkName } } %}
	</td>
{% endblock %}