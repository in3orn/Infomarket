{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'benchmark_message' %}
{% set title = 'title.benchmarkMessages'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.products) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.authors) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.states) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.readByAdmin) }}
	</li>
{% endblock %}

{% block baseMainMoreActions %}
	<li>	
		<div class="btn-group">
			{{ form_widget(form.setReadSelected, { 'icon': 'fa-envelope-open-o', 'label': 'action.benchmarkMessage.setReadSelected', 'attr': {'class': 'btn btn-primary', 'type': 'button'} }) }}
			{{ form_widget(form.setUnreadSelected, { 'icon': 'fa-envelope-o', 'label': 'action.benchmarkMessage.setUnreadSelected', 'attr': {'class': 'btn btn-primary', 'type': 'button'} }) }}
		</div>
	</li>
{% endblock %}

{% block headerMoreFields2 %}
	<th><i class="fa fa-list"></i> {{ 'label.product'|trans }}</th>
	<th><i class="fa fa-list"></i> {{ 'label.benchmarkMessage.author'|trans }}</th>
	<th><i class="fa fa-list"></i> {{ 'label.benchmarkMessage.state'|trans }}</th>
	<th>
		{% include 'common/fields/table/icon_field.html.twig' with { tooltip: 'label.read', icon: 'envelope-o'} %}
	</th>
{% endblock %}

{% block entryMoreFields2 %}
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'product', value: { id: item.productId, name: item.brandName, subname: item.productName } } %}
	</td>
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'user', value: { id: item.authorId, name: item.authorName } } %}
	</td>
	<td>
		{{ benchmarkMessageStateName(item.state)|trans }}
	</td>
	<td>
		{% include 'common/fields/bool_action_field.html.twig' with 
			{ 'id': item.id, 'value': item.readByAdmin, 'extPath': '_set_read',
				'trueIcon': 'fa-envelope-open-o', 'falseIcon': 'fa-envelope-o',
				'trueTooltip': 'label.read'|trans, 'falseTooltip': 'label.benchmarkMessage.unread'|trans, canEdit: true } %}
	</td>
	
{% endblock %}