{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'article_article_category_assignment' %}
{% set title = 'title.article_article_category_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.articleCategories, { 'label': 'label.articleCategories' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.articles, { 'label': 'label.articles' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-"></i> {{ 'label.article'|trans }}</th>
	<th><i class="fa fa-"></i> {{ 'label.articleCategory'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'article', value: { id: item.articleId, name: item.articleName } } %}
	</td>
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'article_category', value: { id: item.articleCategoryId, name: item.articleCategoryName } } %}
	</td>
{% endblock %}