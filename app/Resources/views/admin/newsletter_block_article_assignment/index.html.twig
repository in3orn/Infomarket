{% extends 'admin/base/index.html.twig' %}

{% set mainPath = 'newsletter_block_article_assignment' %}
{% set title = 'title.newsletter_block_article_assignments'|trans %}

{% block filterMoreFields1 %}
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.newsletterBlocks, { 'label': 'label.newsletterBlocks' }) }}
	</li>
	<li class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
		{{ form_widget(filter.articles, { 'label': 'label.articles' }) }}
	</li>
{% endblock %}

{% block headerMainFields1 %}
	<th><i class="fa fa-"></i> {{ 'label.newsletterBlock'|trans }}</th>
	<th><i class="fa fa-"></i> {{ 'label.article'|trans }}</th>
{% endblock %}

{% block entryMainFields1 %}
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'newsletter_block', value: { id: item.newsletterBlockId, name: item.newsletterBlockName } } %}
	</td>
	<td>
		{% include 'common/links/simple_link.html.twig' with { type: 'article', value: { id: item.articleId, name: item.articleName } } %}
	</td>
{% endblock %}