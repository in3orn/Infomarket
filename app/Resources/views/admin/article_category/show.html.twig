{% extends 'admin/image/show.html.twig' %}

{% set mainPath = 'article_category' %}
{% set title = 'title.article_categories'|trans %}
{% set gender = 'fm.' %}

{% block moreFields2 %}
	<div class="row">
		<div class="col-xs-12">
			<h4>{{ entry.subname | raw }}</h4>
		</div>
	</div>
{% endblock %}

{% block moreFields3 %}
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-3">
			<strong>{{ 'label.fm.featured'|trans }}: </strong>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-9">
			<p class="{{ entry.featured ? 'text-green' : 'text-red' }}">
				{{ entry.featured ? 'label.yes'|trans : 'label.no'|trans }}
			</p>
		</div>
	</div>
	
	{% include 'common/fields/text_field.html.twig' with 
	{ 'label': 'label.orderNumber'|trans, 'value': entry.orderNumber } %}
{% endblock %}