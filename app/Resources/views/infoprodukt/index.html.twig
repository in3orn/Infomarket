{% extends 'infoprodukt/base.html.twig' %}

{% set basePath = 'infoprodukt_' %}

{% block title %}{{ title }}{% endblock %}

{% block baseMoreStyles %}
	{% for key, menuWidth in menuWidths %}
		.category-menu-{{ key }} {
			width: {{ menuWidth }}px !important;
		}
	{% endfor %}
{% endblock %}

{% block baseMoreJavascripts %}
	<script type="text/javascript">
		$(function(){
			$(".dropdown-menu > li > a.trigger").on("click",function(e){
				var current=$(this).next();
				var grandparent=$(this).parent().parent();
				if($(this).hasClass('left-caret')||$(this).hasClass('right-caret'))
					$(this).toggleClass('right-caret left-caret');
				grandparent.find('.left-caret').not(this).toggleClass('right-caret left-caret');
				grandparent.find(".sub-menu:visible").not(current).hide();
				current.toggle();
				e.stopPropagation();
			});
			$(".dropdown-menu > li > a:not(.trigger)").on("click",function(){
				var root=$(this).closest('.dropdown');
				root.find('.left-caret').toggleClass('right-caret left-caret');
				root.find('.sub-menu:visible').hide();
			});
		});
	</script>
{% endblock %}

{% block body %}
	
	{% block navigationBar %}
	<nav class="navbar navbar-fixed-top">
		<div class="navbar-default">
			<div class="container">
				<div class="row">
					<div class="col-xs-12">
						{% block navigationHeader %}
							<div class="navbar-header">
								{% block navigationButton %}
								<button type="button" class="navbar-toggle collapsed" 
										data-toggle="collapse" 
										data-target="#catbar" 
										aria-expanded="false">
							        <span class="sr-only">Toggle navigation</span>
							        <span class="icon-bar"></span>
							        <span class="icon-bar"></span>
							        <span class="icon-bar"></span>
						      	</button>
					      		{% endblock %}
					      		
								{% block navigationBrand %}
								<a class="navbar-brand" href="{{ path('infoprodukt_home') }}">
									<img class="brand-image" src="{{ asset('img/logo-infoprodukt.png') }}">
								</a>
								{% endblock %}
					    	</div>
				    	{% endblock %}
						
						{% block navigationSearch %}
						<div class="navbar-search navbar-form navbar-right navbar-input-group hidden-xs hidden-sm hidden-md" role="search">
							{% form_theme searchFilterForm 'form/fields.html.twig' %}
						
							{{ form_start(searchFilterForm) }}
								<ul class="list-inline">
									<li>
										<div class='input-group input-sm search'>
											{{ form_widget(searchFilterForm.name, { 'label': 'label.name', 'attr': { 'class': 'input-sm' }  }) }}
											<span class="input-group-btn">
												{{ form_widget(searchFilterForm.search, { 'icon': 'fa fa-search', 'label': ' ', 'attr': { 'class': 'input-sm btn-danger' }  }) }}
									      	</span>
										</div>
									</li>
								</ul>			
							{{ form_end(searchFilterForm) }}
						</div>
						{% endblock %}
						
						{% block navigationLinks %}
						<div class="collapse navbar-collapse" id="catbar">
							<ul class="nav navbar-nav navbar-center">
							
								{% for category in menuCategories %}
								<li>
									<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
										<img style="vertical-align: bottom;" alt="{{ 'label.category.icon'|trans }}" 
											src="{{ asset(category.iconImage ? category.iconImage : 'img/icon.png') }}">
										<span class="text-red"> {{ category.name }} {{ category.subname }}</span>
										<span class="caret"></span>
									</a>
									<ul class="dropdown-menu category-menu-{{ category.id }}">
										{% for subcategory in category.menuChildren | slice(0, 10) %}
											{% include 'common/category/menu_entry.html.twig' with { 'entry': subcategory } %}
										{% endfor %}
										
										{% if category.menuChildren|length > 10 %}
											<li role="separator" class="divider"></li>
											<li>
												<a href="{{ path(basePath ~ 'category_show', { id: category.id }) }}">
													<span class="text-red">{{ 'label.more' | trans }}</span>
												</a>
											</li>
										{% endif %}
									</ul>
								</li>
								{% endfor %}
								<li>
									<a href="{{ path(basePath ~ 'category') }}">
										<img style="vertical-align: bottom;" alt="{{ 'label.category.icon'|trans }}" 
											src="{{ asset('img/icon-all.png') }}">
										<span class="text-brand"> {{ 'label.all'|trans }}</span>
									</a>
								</li>
								
							</ul>
						</div>
						{% endblock %}
					</div>
				</div>
		  	</div>
	  	</div>
	</nav>
	{% endblock %}
		
