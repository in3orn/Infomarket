{% extends 'infoprodukt/index.html.twig' %}

{% set title = (entry.name ~ ' ' ~ entry.subname)|raw %}
{% set mainPath = 'category' %}
	
{% set listName = 'title.categories'|trans %}

{% block content %}
	
	{% if topProducts == false and entry.preleaf %}
		{% include 'infoprodukt/category/show_category.html.twig' %}
	{% elseif entry.parent and entry.parent.preleaf %}
		{% include 'infoprodukt/category/show_ratings.html.twig' %}
	{% else %}
		{% include 'infoprodukt/category/show_subcategories.html.twig' %}
	{% endif %}
	
{% endblock %}
