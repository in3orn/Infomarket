{% set topProducts = topProducts|default(0) %}

{% block searchBlock %}
	<div class="row padding-5 hidden-lg hidden-md bkg-white">
		<div class="col-xs-12">
			{% include 'common/form/search_form.html.twig' %}
		</div>
	</div>
{% endblock %}
	
<div class="container">

	{% block breadcrumbs %}
		<div class="row">
			<div class="col-xs-12">
				<a href="{{ path('infomarket_home') }}">{{ 'label.home'|trans }}</a>
				/ 
				{{ title }}
			</div>
		</div>
	{% endblock %}

	<div class="row">
		{% block sidebar %}
			<div class="col-sm-3 col-sm-push-9">
				{% include "infoprodukt/common/sidebar.twig" %}
			</div>
		{% endblock %}
	
		{% block main %}				
			<div class="col-sm-9 col-sm-pull-3">
				<div class="col-xs-12 well">
					{% for subcategory in entry.children %}
						{% if subcategory.infoprodukt %}
							<div class="col-sm-3">
								{% if topProducts and subcategory.preleaf == false %}
									{% include 'common/bottom_rect_tile.html.twig' with 
										{'entry': subcategory, routeParams: { category: subcategory.id, top_products: topProducts } } %}
								{% else %}
									{% include 'common/bottom_rect_tile.html.twig' with 
										{'entry': subcategory, routeParams: { category: subcategory.id }  } %}
								{% endif %}
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		{% endblock %}
	</div>
</div>