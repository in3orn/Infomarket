{% extends 'infoprodukt/index.html.twig' %}
		
{% block content %}
<div class="container">
	<div class="row">
		{% block sidebar %}
		<div class="col-sm-3 col-sm-push-9">
			<div class="col-xs-12 well">
				{% block sidebarContent %}
				<h1>Sekcje</h1>
				
				<ul class="nav nav-pills nav-stacked">
					<li role="presentation" class="{{ mainPath == 'category' ? 'active' : ''}}">
						<a href="{{ path('infoprodukt_category') }}">Kategorie</a>
					</li>
					<li role="presentation" class="{{ mainPath == 'article' ? 'active' : ''}}">
						<a href="{{ path('infoprodukt_article') }}">Artykuly</a>
					</li>
					<li role="presentation" class="{{ mainPath == 'product' ? 'active' : ''}}">
						<a href="{{ path('infoprodukt_product') }}">Produkty</a>
					</li>
					<li role="presentation" class="{{ mainPath == 'brand' ? 'active' : ''}}">
						<a href="{{ path('infoprodukt_brand') }}">Marki</a>
					</li>
					<li role="presentation" class="{{ mainPath == 'term' ? 'active' : ''}}">
						<a href="{{ path('infoprodukt_term') }}">Leksykon pojec</a>
					</li>
				</ul>
				{% endblock %}
			</div>
		</div>
		{% endblock %}
		
		{% block main %}
		<div class="col-sm-9 col-sm-pull-3">
			<div class="col-xs-12 well">
				{% block mainContent %}
				{% endblock %}
			</div>
		</div>
		{% endblock %}
	</div>
</div>
{% endblock %}
