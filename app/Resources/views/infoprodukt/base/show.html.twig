{% extends 'infoprodukt/base/base.html.twig' %}

{% set extPath = extPath|default('_show') %}

{% block moreBreadcrumbs %}
	{% if category is defined %}
		/ 
		<a href="{{ path(basePath ~ 'category_show', { id: category.id, category: category.preleaf ? category.id : category.parent.id }) }}">{{ category.name }}</a>
	{% endif %}
	/ 
	<a href="{{ path(basePath ~ mainPath, { category: category is defined ? category.id : null }) }}">{{ listName }}</a>
	/ 
	{{ entry.name }}
{% endblock %}