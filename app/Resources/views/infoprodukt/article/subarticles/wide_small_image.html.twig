{% for article in articles %}
	<div class="row">
		<div class="col-xs-12">
			<h2 class="text-brand">{{ article.name }}</h2>
			<h3 class="text-red">{{ article.subname }}</h3>
			<div class="col-xs-6 col-xs-offset-3">
				<div class="rect">
					<img class="div-center" alt="{{ article.name }}" src="{{ asset(article.getImagePath()) }}">
				</div>
			</div>
			<p><strong>{{ article.intro }}</strong></p>
			<p>{{ article.content }}</p>
		</div>
	</div>
{% endfor %}