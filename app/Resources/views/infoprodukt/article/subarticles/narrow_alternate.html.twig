{% for article in articles %}
	<div class="row">
		<div class="col-xs-12">
			<h3>
				<span class="text-brand">{{ article.name }}</span>
				<span class="text-red">{{ article.subname }}</span>
			</h3>
		</div>
		<div class="col-sm-4 {{ loop.index % 2 ? '' : 'col-sm-push-8' }}">
			{% if article.image %}
			<div class="rect">
				<img class="div-center" alt="{{ article.name }}" src="{{ asset(article.getImagePath()) }}">
			</div>
			{% endif %}
		</div>
		<div class="col-sm-8 {{ loop.index % 2 ? '' : 'col-sm-pull-4' }}">
			{% if article.intro %}
				<p><strong>{{ article.intro }}</strong></p>
			{% endif %}
			<p>{{ article.content }}</p>
		</div>
	</div>
{% endfor %}