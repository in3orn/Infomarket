{% for article in articles %}
	<div class="row">
		<div class="col-xs-12">
			<h2 class="text-brand">{{ article.name }}</h2>
			<h3 class="text-red">{{ article.subname }}</h3>
			<img class="img-responsive" alt="{{ article.name }}" src="{{ asset(article.getImagePath()) }}">
			<p><strong>{{ article.intro }}</strong></p>
			<p>{{ article.content }}</p>
		</div>
	</div>
{% endfor %}