{% for article in articles %}
	<div class="row">
		<div class="col-xs-12">
			<h3>
				<span class="text-brand">{{ article.name }}</span>
			</h3>
			<h4>
				<span class="text-red">{{ article.subname }}</span>
			</h4>
		</div>
		<div class="col-sm-3">
			{% if article.image %}
				<div class="rect">
					<img class="div-center" alt="{{ article.name }}" src="{{ asset(article.getImagePath()) }}">
				</div>
			{% endif %}
		</div>
		<div class="col-sm-9">
			{% if article.intro %}
				<p><strong>{{ article.intro }}</strong></p>
			{% endif %}
		</div>
		<div class="col-xs-12">
			<p>{{ article.content }}</p>
		</div>
	</div>
{% endfor %}