{% for article in articles %}
	<div class="row">
		<div class="col-sm-4 {{ loop.index % 2 ? '' : 'col-sm-push-8' }}">
			<div class="rect lowered-35">
				<img class="div-center" alt="{{ article.name }}" src="{{ asset(article.getImagePath()) }}">
			</div>
		</div>
		<div class="col-sm-8 {{ loop.index % 2 ? '' : 'col-sm-pull-4' }}">
			<h2 class="text-brand">{{ article.name }}</h2>
			<h3 class="text-red">{{ article.subname }}</h3>
			<p><strong>{{ article.intro }}</strong></p>
		</div>
		<div class="col-xs-12">
			<p>{{ article.content }}</p>
		</div>
	</div>
{% endfor %}