<ul class="nav nav-pills nav-stacked">
	
	{% set preleafCategoryId = null %}
	{% set childCategoryId = null %}
	
	{% if category %}
		{% set preleafCategory = category.preleaf ? category : category.parent %}
		{% set preleafCategoryId = preleafCategory ? preleafCategory.id : null %}
		
		{% set childCategory = category.preleaf ? category.getDefaultChildCategory() : category %}
		{% set childCategoryId = childCategory ? childCategory.id : null %}
	{% endif %}
	
	<li role="presentation" class="{{ mainPath == 'article' ? 'active' : ''}}">
		<a href="{{ path(basePath ~ 'article', { category: preleafCategoryId }) }}">{{ 'title.articles'|trans }}</a>
	</li>
	
	<li role="presentation" class="{{ mainPath == 'category' ? 'active' : ''}}">
		<a href="{{ path(basePath ~ 'category' ~ (childCategoryId ? '_show' : ''), { id: childCategoryId, category: childCategoryId }) }}">
			{{ childCategoryId ? 'title.ratings'|trans : 'title.categories'|trans }}
		</a>
	</li>
	
	<li role="presentation" class="{{ mainPath == 'term' ? 'active' : ''}}">
		<a href="{{ path(basePath ~ 'term', { category: preleafCategoryId }) }}">{{ 'title.terms'|trans }}</a>
	</li>
		
</ul>