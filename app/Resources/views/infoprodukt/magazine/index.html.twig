{% extends 'infoprodukt/base/index.html.twig' %}

{% set title = 'title.magazines'|trans %}
{% set mainPath = 'magazine' %}

{% set listName = 'title.magazines'|trans %}
		
{% block mainContent %}
	{% block magazines %}
	<div class="row">
		<div class="col-xs-12">
			<h1>{{ 'title.magazines'|trans }}</h1>
			
			{% for entry in entries %}
				<div class="col-sm-2 padding-5">
					<a href="{{ asset(entry.magazineFile) }}">
						<div class="col-xs-12 bkg-red padding-5">
			  				<img class="img-responsive" 
			    				alt="{{ entry.name | raw }}" src="{{ asset(entry.getImagePath()) }}">
	    				</div>
	    				<div class="col-xs-12 bkg-brand padding-5">
	    					<h4 class="title text-white">
	    						{{ entry.name }}
	    					</h4>
	    				</div>
			  		</a>
				</div>
			{% endfor %}
		</div>
	</div>
	{% endblock %}
	
	{% block paginator %}
	<div class="row">
		<div class="col-xs-12">
        	{{ knp_pagination_render(entries) }}
		</div>
	</div>
	{% endblock %}
{% endblock %}
