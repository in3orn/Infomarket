{% extends 'infoprodukt/base/show.html.twig' %}

{% set title = entry.name|raw %}
{% set mainPath = 'product' %}
		
{% set listName = 'title.products'|trans %}

{% block mainContent %}
	{% block header %}
	<div class="row">
		{% block logo %}
		<div class="col-sm-6">
			<div class="rect-2x1">
				<img class="div-center img-{{ entry.vertical ? 'v' : '' }}responsive" 
					alt="{{ entry.name | raw }}" src="{{ asset(entry.getImagePath()) }}">
			</div>	
		</div>
		{% endblock %}
		
		{% block summary %}
		<div class="col-sm-6">
			<h1>{{ entry.name | raw }}</h1>
			
			<div class="row">
				<div class="col-xs-4">
					<p><strong>Producent: </strong></p>
				</div>
				<div class="col-xs-8">
					<p>{{ entry.brand.name }} </p>
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-4">
					<p><strong>Rok produkcji: </strong></p>
				</div>
				<div class="col-xs-8">
					<p>2016</p>
				</div>
			</div>			
			
			<div class="row">
				<div class="col-xs-4">
					<p><strong>Cena: </strong></p>
				</div>
				<div class="col-xs-8">
					<p>1599,-</p>
				</div>
			</div>	
			
			<div class="row">
				<div class="col-xs-4">
					<p><strong>Gwarancja: </strong></p>
				</div>
				<div class="col-xs-8">
					<p>12 miesiecy</p>
				</div>
			</div>
		</div>
		{% endblock %}
		
	</div>
	{% endblock %}
	
	{% block description %}
	<div class="row">
		<div class="col-xs-12">
{# 			<p>{{ entry.content | raw }}</p>#}
		</div>
	</div>
	{% endblock %}
	
	{% block back %}
	<div class="row">
		<div class="col-xs-12">
			<a class="btn btn-primary fa fa-arrow-circle-o-left" href="{{ path('infoprodukt_' ~ mainPath) }}"></a>
			<a class="btn btn-primary fa fa-arrow-circle-o-up pull-right" href="#"></a>
		</div>
	</div>	
	{% endblock %}
{% endblock %}
