{% extends 'infoprodukt/index.html.twig' %}

{% set title = 'InfoProdukt' %}
{% set mainPath = 'home' %}
		
{% block content %}
	{% block video %}
	<div class="row no-padding video-container">
		<video autoplay controls muted poster="{{ asset('img/template/info-produkt-logo.png') }}" id="bgvid" loop>
			<source src="{{ asset('img/template/info-produkt-video.mp4') }}" type="video/mp4">
		</video>
		
		<div class="row no-padding video-container bkg-black-50"></div>
