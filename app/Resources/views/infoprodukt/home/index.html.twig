{% extends 'infoprodukt/index.html.twig' %}

{% set title = 'InfoProdukt' %}
{% set mainPath = 'home' %}

{% block content %}
	
	{% block images %}
		<div class="row">
			<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
				<ol class="carousel-indicators">
				    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				    <li data-target="#myCarousel" data-slide-to="1"></li>
				    <li data-target="#myCarousel" data-slide-to="2"></li>
			  	</ol>
			  	
			  	<div class="align-right carousel-inner">
			  		<img class="item active img-responsive" alt="image" src="img/template/kategoria-01.jpg">
					<img class="item img-vresponsive" alt="image" src="img/template/kategoria-02.jpg">
		    		<img class="item img-responsive" alt="image" src="img/template/kategoria-03.jpg">
			  	</div>
		  	</div>
		</div>
	{% endblock %}
	
	<div class="vr-space-10"></div>
	
	{% block promo %}
	<div class="row">
		<h2 class="text-center">
			<span class="text-brand">{{ 'text.slogan1'|trans }}</span>
			<span class="text-red">{{ 'text.slogan2'|trans }}</span>
		</h2>
	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
	{% block featuredCategories %}
	<div class="container">
		<div class="row">
			<h4 class="text-center title">
				<span class="text-brand">{{ 'header.categories.1'|trans }}</span> 
				<span class="text-red">{{ 'header.categories.2'|trans }}</span>
			</h4>
		</div>
		
		<div class="row">
			{% include 'common/tile_list.html.twig' with {'entries': categories|slice(0,12), 
				'entryPath': 'category', 'colSize': 2, 'tile': 'bottom_rect_tile' } %}
		</div>
		
		<div class="row text-center">
			<a href={{ path(basePath ~ 'category') }} class="btn btn-primary">{{ 'label.showAll'|trans }}</a>
		</div>
	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
	{% block magazines %}
		<div class="container">
			<div class="row">
				<h4 class="text-center title">
					<span class="text-brand">{{ 'header.magazines.1'|trans }}</span>
					<span class="text-red">{{ 'header.magazines.2'|trans }}</span>
				</h4>
			</div>
			
			<div class="row">
				{% for magazine in magazines | slice (0,6) %}
					<div class="col-sm-2 padding-5">
						<div class="col-xs-12 bkg-red padding-5">
					  		<a href="{{ path(basePath ~ 'magazine_show', { id: magazine.id }) }}">
					  			{% if magazine.image %}
					  				<img class="img-responsive" 
										alt="{{ magazine.name | raw }}" src="{{ asset(magazine.getImagePath()) }}">
								{% endif %}
					  		</a>
				  		</div>
				  	</div>
			  	{% endfor %}
		  	</div>
		  	
		  	<div class="row text-center">
				<a href={{ path(basePath ~ 'magazine') }} class="btn btn-danger">{{ 'label.showAll'|trans }}</a>
			</div>
	  	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
{% endblock %}