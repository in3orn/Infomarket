	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
	{% block main %}
	<div class="row">
		<h1 class="text-center">
			<span class="text-brand">Sam wybieraj najlepsze produkty.</span>
			<span class="text-red">Kupuj glowa, nie cena.</span>
		</h1>
		<div class="vr-space-20"></div>
	</div>
			
	<div class="container">
		<div class="row">
			<div class="col-sm-4">
				<div class="col-sm-2"></div>
				<div class="col-sm-8">
					<div class="circle bkg-white">
						<span class="div-center fa fa-user fa-5x text-brand"></span>
					</div>
				</div>
				<div class="col-sm-2"></div>
				<h2 class="text-center text-red">Opinie ekspertow</h2>
			</div>
			<div class="col-sm-4">
				<div class="col-sm-2"></div>
				<div class="col-sm-8">
					<div class="circle bkg-white">
						<span class="div-center fa fa-star-half-o fa-5x text-brand"></span>
					</div>
				</div>
				<div class="col-sm-2"></div>
				<h2 class="text-center text-red">Najlepsze produkty</h2>
			</div>
			<div class="col-sm-4">
				<div class="col-sm-2"></div>
				<div class="col-sm-8">
					<div class="circle bkg-white">
						<span class="div-center fa fa-tasks fa-5x text-brand"></span>
					</div>
				</div>
				<div class="col-sm-2"></div>
				<h2 class="text-center text-red">Rating marek</h2>
			</div>
		</div>
	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
	{% block categories %}
	<div class="row no-padding">
		<h1 class="text-center">Kategorie</h1>
		<div class="vr-space-20"></div>
		
		{% for entry in categories %}
			{% if loop.index < 6 %}
			<div class="col-sm-2 no-padding">
				<a class="category-link" href="{{ path('infoprodukt_category_show', { 'id': entry.id }) }}">
					<img class="img-responsive" src="{{ asset(entry.getImagePath()) }}">
					<div class="div-bottom col-xs-12">
						<h3>{{ entry.name }}</h3>
					</div>
				</a>
			</div>
			{% endif %}
		{% endfor %}
		<div class="col-sm-2 no-padding">
			<a class="category-link" href="{{ path('infoprodukt_category') }}">
				<img class="img-responsive" src="img/template/placeholder-1x1.png">
				<div class="div-bottom col-xs-12">
					<h3>Inne</h3>
				</div>
			</a>
		</div>
	</div>
	{% endblock %}
	
	<div class="vr-space-40"></div>
	
