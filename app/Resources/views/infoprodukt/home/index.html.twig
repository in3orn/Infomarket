	<div class="vr-space-40"></div>
	
	{% block partners %}
	<div class="container">
		<div class="row">
			<h1 class="text-center">Partnerzy</h1>
			<div class="vr-space-20"></div>
			
			<div class="col-sm-4"></div>
			<div class="col-sm-4">
