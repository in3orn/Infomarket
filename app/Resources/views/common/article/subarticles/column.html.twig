{% if cols is not defined %}
	{% set cols = 12 %}
{% endif %}

{% set size = 12 / cols %}

{% for i in 1..size %}
	<div class="col-sm-{{ cols }}">	
		{% for article in articles %}
			{% if loop.index % size == i %}
				<h4>
					<span class="text-brand">{{ article.name | raw }}</span>
					<span class="text-red">{{ article.subname | raw }}</span>
				</h4>
				
				{% if article.image %}
					<img class="img-responsive" 
						alt="{{ article.name | raw }}" src="{{ asset(article.getImagePath()) }}">
				{% endif %}
				
				<p><strong>{{ article.intro | raw }}</strong></p>
				<p>{{ article.content | raw }}</p>
			{% endif %}
		{% endfor %}
	</div>
{% endfor %}