{% for article in articles %}
	<div class="row">
		<div class="col-xs-12">
			<h4>
				<span class="text-brand">{{ article.name | raw }}</span>
				<span class="text-red">{{ article.subname | raw }}</span>
			</h4>
		</div>
			
		<div class="col-xs-12">
			{% if article.image %}
			<div class="col-xs-6 col-xs-offset-3">
				<img class="img-responsive" 
					alt="{{ article.name | raw }}" src="{{ asset(article.getImagePath()) }}">
			</div>
			{% endif %}
		</div>
			
		<div class="col-xs-12">
			<p><strong>{{ article.intro | raw }}</strong></p>
			<p>{{ article.content | raw }}</p>
		</div>
	</div>
{% endfor %}