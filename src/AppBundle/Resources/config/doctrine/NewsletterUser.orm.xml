<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\NewsletterUser" 
        table="newsletter_users"
        repository-class="AppBundle\Repository\Admin\Main\NewsletterUserRepository">
        
        <field name="subscribed" type="boolean" default="1" />
        
        <one-to-many field="newsletterUserNewsletterGroupAssignments" target-entity="NewsletterUserNewsletterGroupAssignment" mapped-by="newsletterUser">
        </one-to-many>
        
        <one-to-many field="newsletterUserNewsletterPageAssignments" target-entity="NewsletterUserNewsletterPageAssignment" mapped-by="newsletterUser">
        </one-to-many>
    </entity>
    
</doctrine-mapping>