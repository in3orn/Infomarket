<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\ArticleBrandAssignment" 
        table="article_brand_assignments"
        repository-class="AppBundle\Repository\ArticleBrandAssignmentRepository">
        
        <many-to-one field="article" target-entity="Article" inversed-by="articleBrandAssignments" />
        <many-to-one field="brand" target-entity="Brand" inversed-by="articleBrandAssignments" />
        
    </entity>
    
</doctrine-mapping>