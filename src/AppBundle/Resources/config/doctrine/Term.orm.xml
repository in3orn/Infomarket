<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Term" 
        table="terms"
        repository-class="AppBundle\Repository\Admin\Main\TermRepository">
        
        <field name="content" type="text" nullable="true" />
        
        <one-to-many field="termCategoryAssignments" target-entity="TermCategoryAssignment" mapped-by="term">
            <order-by>
            	<order-by-field name="category" direction="ASC" />
            </order-by>
        </one-to-many>
        
    </entity>
</doctrine-mapping>