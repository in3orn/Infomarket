<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Article" 
        table="articles"
        repository-class="AppBundle\Repository\ArticleRepository">
        
        <field name="subname" type="string" length="64" nullable="true"/>
        <field name="featured" type="boolean" default="false" />
        
        <field name="intro" type="text" nullable="true" />
        <field name="content" type="text" nullable="true" />
        
        <many-to-one field="parent" target-entity="Article" nullable="true" />
        
        <field name="orderNumber" type="integer" default="1"/>
        <field name="layout" type="integer" default="0"/>
        <field name="displaySided" type="boolean" default="false" />
        
        <one-to-many field="children" target-entity="Article" mapped-by="parent">
            <order-by>
            	<order-by-field name="orderNumber" direction="ASC" />
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>
    </entity>
    
</doctrine-mapping>