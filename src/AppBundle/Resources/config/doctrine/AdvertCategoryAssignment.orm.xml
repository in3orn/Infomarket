<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\AdvertCategoryAssignment" 
        table="advert_category_assignments"
        repository-class="AppBundle\Repository\AdvertCategoryAssignmentRepository">
        
        <many-to-one field="advert" target-entity="Advert" inversed-by="advertCategoryAssignments" />
        <many-to-one field="category" target-entity="Category" inversed-by="advertCategoryAssignments" />
        
    </entity>
    
</doctrine-mapping>