<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Product" 
        table="products"
        repository-class="AppBundle\Repository\ProductRepository">
        
        <many-to-one field="brand" target-entity="Brand" nullable="false" />
        
        <field name="price" type="decimal" precision="10" scale="2" nullable="true" />
        <field name="guarantee" type="integer" nullable="true" />
        
        <one-to-many field="productCategoryAssignments" target-entity="ProductCategoryAssignment" mapped-by="product">
            <order-by>
            	<order-by-field name="category" direction="ASC" />
            	<order-by-field name="segment" direction="ASC" />
            </order-by>
        </one-to-many>
        
    </entity>
    
</doctrine-mapping>