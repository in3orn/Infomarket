<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Segment" 
        table="segments"
        repository-class="AppBundle\Repository\SegmentRepository">
        
        <field name="subname" type="string" length="128" nullable="true"/>
        
        <field name="content" type="text" nullable="true" />
        
        <field name="orderNumber" type="integer" default="0" />
        
        <field name="color" type="string" nullable="false" />
        
        <one-to-many field="productCategoryAssignments" target-entity="ProductCategoryAssignment" mapped-by="segment">
            <order-by>
            	<order-by-field name="category" direction="ASC" />
            	<order-by-field name="product" direction="ASC" />
            </order-by>
        </one-to-many>
        
        <one-to-many field="brandCategoryAssignments" target-entity="BrandCategoryAssignment" mapped-by="segment">
            <order-by>
            	<order-by-field name="category" direction="ASC" />
            	<order-by-field name="brand" direction="ASC" />
            </order-by>
        </one-to-many>
        
    </entity>
</doctrine-mapping>